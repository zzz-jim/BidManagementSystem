@model PF.DomainModel.Identity.Section

@{
    ViewBag.Title = "编辑部门";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal widget-body">
        <h4>部门</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.Hidden("oldId", Model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "customTextBox", @readOnly = "readOnly " } })
                @Html.ValidationMessageFor(model => model.Id)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

 
        <div class="form-group">
            @Html.LabelFor(model => model.InsuranceCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InsuranceCode)
                @Html.ValidationMessageFor(model => model.InsuranceCode)
            </div>
        </div>
