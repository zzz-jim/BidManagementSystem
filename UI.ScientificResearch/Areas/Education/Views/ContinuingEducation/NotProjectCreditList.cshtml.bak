<div id="bigfundsgrid" class="k-content">
    <div id="fundsGrid">

    </div>
    <script>
      

        $(function () {
            searchrightdataoffundslist();
        });

        function searchrightdataoffundslist() {
            var searchitem2 = $("#Name").val();
            var searchitem3 = $("#State").val();
            var searchitem5 = $("#startTime").val();
            var searchitem6 = $("#endTime").val();
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        type: "post",
                        url: "/Education/ContinuingEducation/NotProjectCreditStatistics?Name=" +
                        encodeURI(searchitem2) + "&State=" + encodeURI(searchitem3) + "&startTime=" +
                        encodeURI(searchitem5) + "&endTime=" +
                        encodeURI(searchitem6) + "",
                        dataType: "json",
                        contentType: "application/json",
                    },

                    destroy: {
                        type: "post",
                        url: "/Education/ContinuingEducation/DeleteApplicationListByModelId",
                        dataType: "json",
                        complete: function (e) {
                            $("#fundsGrid").data("kendoGrid").dataSource.read();
                        }
                    },
                    parameterMap: function (options, operation) {
                        if (operation == "read") {
                            var parameter = {
                                page: options.page,
                                pageSize: options.pageSize
                            };
                            return kendo.stringify(parameter);
                        }
                        if (operation == "destroy") {
                            options.action = operation;
                            return { modelId: kendo.stringify(options.models[options.models.length - 1].ID) };
                        }
                    },
                },

                batch: true,
                pageSize: 10,
                schema: {
                    model: {
                        //删除时必须有
                        id: "ID"
                    },
                    data: function (d) {
                        for (var i = 0; i < d.data.length; i++) {
                            ////将json时间转换
                            var birthdayMilliseconds = eval('new ' + d.data[i].CreatedTime.replace('/', '', 'g').replace('/', '', 'g'));
                            var birthday = birthdayMilliseconds.toLocaleDateString() + " " + birthdayMilliseconds.toLocaleTimeString();
                            d.data[i].CreatedTime = birthday;

                            if (d.data[i].IsProjectCredit == false) {
                                d.data[i].IsProjectCredit = "已授予学分";
                            }
                            else if (d.data[i].IsProjectCredit == true) {
                                d.data[i].IsProjectCredit = "未授予学分";
                            }
                            else {
                                d.data[i].IsProjectCredit = "";
                            }
                        }
                        return d.data;

                    },
                    total: function (d) {
                        return d.total;
                    }
                },
                serverPaging: true,
            });

            $("#fundsGrid").kendoGrid({
                dataSource: dataSource,
                pageable: {
                    refresh: true,
                    pageSizes: true,
                    buttonCount: 5,
                    messages: {
                        display: "显示{0}-{1}条，共{2}条",
                        empty: "没有数据",
                        page: "页",
                        of: "/ {0}",
                        itemsPerPage: "条/页",
                        first: "第一页",
                        previous: "前一页",
                        next: "下一页",
                        last: "最后一页",
                        refresh: "刷新"
                    }
                },
                //过滤条件中文化
                filterable: {
                    operators: {
                        string: {
                            eq: "相同",
                            neq: "不同",
                            startswith: "开始是",
                            contains: "包含",
                            doesnotcontain: "不包含",
                            endswith: "结尾"
                        }
                    },
                    messages: {
                        info: "过滤条件: ",//顶端提示信息
                        and: "和",
                        or: "或",
                        filter: "应用过滤条件",//过滤按钮
                        clear: "清楚过滤条件",//清空按钮
                    }
                },
                columns: [
                {
                    field: "Id",
                    template: "<input type='checkbox' id='#: Id #' name='#:Id#' >",
                    //template: "<input type='checkbox' />",
                    title: "序号",
                    width: "3%"
                    //hidden: true,
                },
                {
                    field: "Id",
                    title: "Id",
                    width: "1%",
                    hidden: true,
                },
                {
                    field: "UserName",
                    title: "姓名",
                    width: "20%"
                },
                 {
                     field: "CreditLevel",
                     title: "学分类别",
                     width: "13%"
                 },
                  {
                      field: "CreditType",
                      title: "授予学分级别",
                      width: "13%"
                  },
                {
                    field: "Credit",
                    title: "学分",
                    width: "10%"
                },
                 {
                     field: "IsProjectCredit",
                     title: "状态",
                     width: "10%"
                 },
                {
                    field: "CreatedTime",
                    title: "时间",
                    width: "10%"
                },
                //{
                //    command:
                //    [{ name: "destroy", text: "删除", width: "10%" }]
                //}
                ],
                editable: {
                    //mode: "inline",
                    mode: "popup"
                },
                selectable: true,
                change: onChange,
            });
        };
        function onChange(arg) {
            var checkBoxArry = $("input[type='checkbox']");
            var checkboxId = [];
            var k = 0;
            for (var i = 0; i < checkBoxArry.length; i++) {
               // alert(checkBoxArry[i].checked);
                if (checkBoxArry[i].checked == true)
                {
                   // alert(checkBoxArry[i].id);
                    checkboxId[k] = checkBoxArry[i].id;
                    k++;
                }
                
            }
            if (checkboxId != null)
            {
                $("#updateId").val(checkboxId);
            }
            var selected = $.map(this.select(), function (item) {
                //alert(item.cells[1].outerText)
                OpenMaxWindow(item.cells[1].outerText);
            });

            //alert(selected);
            //kendoConsole.log("Selected: " + selected.length + " item(s), [" + selected.join(", ") + "]");
        }
    </script>

    <script>
        $(function () {
            $("#ChangeState").click(function () {

                var checkBoxArry = $("input[type='checkbox']");
                var checkboxId = [];
                var k = 0;
                for (var i = 0; i < checkBoxArry.length; i++) {
                    // alert(checkBoxArry[i].checked);
                    if (checkBoxArry[i].checked == true) {
                        // alert(checkBoxArry[i].id);
                        checkboxId[k] = checkBoxArry[i].id;
                        k++;
                    }

                }
                //if (checkboxId != null) {
                //     $("#updateId").val(checkboxId);
                //}

                jQuery.ajax({
                    url: "/Education/ContinuingEducation/NotProjectCreditUpdateList?checkboxId=" + checkboxId,
                    type: "post",
                    success: function (data) {
                        if (data != null) { 
                        if (data >0) {
                            alert("操作成功");
                            parent.location.reload();//刷新页面
                        }
                        else {
                            alert("操作失败");
                            parent.location.reload();//刷新页面
                        }
                       }
                    }
                });
                return false;
            });
        })
    </script>
</div>


