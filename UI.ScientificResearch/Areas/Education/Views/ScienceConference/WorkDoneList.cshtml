@model IEnumerable<ScientificResearch.ViewModel.ERPRiZhiViewModel>

@{
    //Layout = "~/Views/Shared/_PopUpLayout.cshtml";
    Layout = null;
}

<div id="AreadyDoWindow">
  
</div>
<script type="text/javascript">
    function OpenAreadyDoWindow(id)
    {
        $("#AreadyDoWindow").kendoWindow({
            position: {
                top: 150, // or "100px"
                left: "13%"
            },
            modal: true,
            draggable: true,
            title:"已办",
            visible: false,
            actions: [
                    "Pin",
                    "Close",
                   // "Minimize",
                 // "Maximize"
            ],
            resizable: false,
            close: function(e) {
                parent.location.reload();//刷新页面
            }
        });

        $.ajax({
            url:"/ScienceConference/ReturnStateValue?id=" + id,
            type:"post",
            success:function(data){
                if (data != null) {
                    // $("#MaxWindow").html(data);

                    var k = data;
                    //判断返回的状态来控制弹出框第一个打开的页面
                    //申请书已填写未审核、科室主任已经审批申请书、科教科已经审批申请书、科教科已经审批申请书、超级管理员审批已经审批申请书
                    if(data=="AplicationWriting")
                    {
                        $("#AreadyDoWindow").append(' <iframe id="application" width="1600" height="750" style="border:0px" src="/ScienceConference/SubmitApplication?id=' + id + '">项目申请书</iframe>');
                    }
                    else if (data=="ApplicationRejected" || data == "ApplicationApproving")//申请书已提交和待审批中
                    {
                        $("#AreadyDoWindow").append(' <iframe id="application" width="1600" height="750" style="border:0px" src="/ScienceConference/ApplicationAgree?id=' + id + '">项目申请书</iframe>');
                    }else if (data == "MeetingEnd")//会议结束
                    {
                        $("#AreadyDoWindow").append(' <iframe id="process" width="1600" height="750" style="border:0px" src="/ScienceConference/SignContract?id=' + id + '">合同记录</iframe>');
                    }
                    else if (data == "MeetingProcess")//经费记录列表
                    {
                        $("#AreadyDoWindow").append(' <iframe id="process" width="1600" height="750" style="border:0px" src="/ScienceConference/ReimburseWorkList?id=' + id + '">项目申请书</iframe>');
                    }
                }
                else {
                    alert("发生异常！");
                }
            }
        });
        $("#AreadyDoWindow").data("kendoWindow").center().open();
    }
</script>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
           申请人
        </th>
        <th>
            操作
        </th>
        <th>
            时间
       </th>
    </tr>
    
    @foreach (var item in Model)
{
    <tr onclick="OpenAreadyDoWindow(@item.FKApplicationID)">
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoSomething)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeStr)
        </td>
    </tr>
        <tr>
                @Html.HiddenFor(modelItem => item.FkFormName)
          
                @Html.HiddenFor(modelItem => item.FKAction)
           
                @Html.HiddenFor(modelItem => item.FKApplicationID)
           
                @Html.HiddenFor(modelItem => item.NotificationContent)
        </tr>
           
    }

</table>

