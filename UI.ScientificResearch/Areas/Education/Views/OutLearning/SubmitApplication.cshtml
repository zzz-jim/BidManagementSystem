<script>
    $(document).ready(function () {
        function startChange() {
            var startDate = start.value(),
            endDate = end.value();

            if (startDate) {
                startDate = new Date(startDate);
                startDate.setDate(startDate.getDate());
                end.min(startDate);
            } else if (endDate) {
                start.max(new Date(endDate));
            } else {
                endDate = new Date();
                start.max(endDate);
                end.min(endDate);
            }
        }

        function endChange() {
            var endDate = end.value(),
            startDate = start.value();

            if (endDate) {
                endDate = new Date(endDate);
                endDate.setDate(endDate.getDate());
                start.max(endDate);
            } else if (startDate) {
                end.min(new Date(startDate));
            } else {
                endDate = new Date();
                start.max(endDate);
                end.min(endDate);
            }
        }

        var start = $("#Date1614004166").kendoDatePicker({
            format: "yyyy-MM-dd",
            change: startChange
        }).data("kendoDatePicker");

        var end = $("#Date717082138").kendoDatePicker({
            format: "yyyy-MM-dd",
            change: endChange
        }).data("kendoDatePicker");
        $("#Date1614004166").attr("readonly", true);
        $("#Date717082138").attr("readonly", true);
        start.max(end.value());
        end.min(start.value());
    });


    $(document).ready(function () {
        $("#Date501080834").kendoDatePicker({
            format: "yyyy-MM-dd",
            value: new Date()
        });
        $("#Date501080834").attr("readonly", true);
    });
</script>



