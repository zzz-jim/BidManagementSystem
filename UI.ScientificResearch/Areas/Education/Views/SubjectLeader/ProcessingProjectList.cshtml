    <script type="text/javascript">

        function OpenProcessWindow(id) {
            //  layer.load('加载带文字', 3);
            // layer.load(3);
            $("#processwindow").kendoWindow({
                position: {
                    top: "12%", // or "100px"
                    left: "8%"
                },
                width: "90%",
                height: "80%",
                modal: true,
                draggable: true,
                //title: "申请书",
                visible: false,
                actions: [
                        "Pin",
                        "Close",
                       // "Minimize",
                     // "Maximize"
                ],
                resizable: false,
                close: function (e) {
                    parent.location.reload();//刷新页面
                }
            });

            $.ajax({
                url: "/SubjectLeader/ReturnStateValue?id=" + id,
                type: "post",
                success: function (data) {
                    if (data != null) {
                        // $("#MaxWindow").html(data);

                        var k = data;
                        //判断返回的状态来控制弹出框第一个打开的页面
                        //申请书已填写未审核、科室主任已经审批申请书、科教科已经审批申请书、科教科已经审批申请书、超级管理员审批已经审批申请书

                        if (data == "ProjectEstablished" || data == "ContractSigning")//申请书已提交和待审批中
                        {
                            $.ajax({
                                url: "/SubjectLeader/LoginPersonIsEqualApprovalWritePerson?id=" + id,
                                type: "post",
                                success: function (data) {
                                    if (data != null) {
                                        if (data == "Equal") {
                                            $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" style="border:0px" src="/SubjectLeader/SignContract?id=' + id + '">合同记录</iframe>');
                                            $("#processwindow").data("kendoWindow").center().open();
                                        }
                                        else {
                                            alert("权限不对!");
                                        }
                                    }
                                }
                            });
                        }
                        else if (data == "ContractSigned" || data == "ProjectProcessing")//申请书已提交和待审批中
                        {
                            $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" style="border:0px" src="/SubjectLeader/ProcessRecordList?id=' + id + '">过程记录</iframe>');
                            $("#processwindow").data("kendoWindow").center().open();
                        }
                        else if (data == "ConcludeUnWrite" || data == "ConcludeUnSubmit")//申请书已提交和待审批中
                        {
                            $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" style="border:0px" src="/SubjectLeader/Conclusions?id=' + id + '">项目结案</iframe>');
                            $("#processwindow").data("kendoWindow").center().open();
                        }
                        else if (data == "ProjectConcluding" || data == "ProjectConcluded" || data == "ConcludeRejected")//申请书已提交和待审批中
                        {
                            if(data == "ConcludeRejected")
                            {
                                $.ajax({
                                    url: "/SubjectLeader/LoginPersonIsEqualApprovalWritePerson?id=" + id,
                                    type: "post",
                                    success: function (data) {
                                        if (data != null) {
                                            if (data == "Equal") {
                                                $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" style="border:0px" src="/SubjectLeader/ConclusionsRejected?id=' + id + '">项目结案</iframe>');
                                                $("#processwindow").data("kendoWindow").center().open();
                                            }
                                            else {
                                                alert("权限不对！");
                                            }
                                        }
                                    }
                                });
                            }
                            else
                            {
                                $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" style="border:0px" src="/SubjectLeader/ConclusionsAgree?id=' + id + '">项目结案</iframe>');
                                $("#processwindow").data("kendoWindow").center().open();
                            }
                        }
                        else if (data == "ExtensionUnWrite")//
                        {
                            //为申请书iframe的src赋值id是ERPNWorkToDo的ID
                            $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" style="border:0px" src="/SubjectLeader/ExtensionRequest?id=' + id + '">项目延期</iframe>');
                            $("#processwindow").data("kendoWindow").center().open();
                        }
                        else if (data == "ExtensionRequestApproving" || data == "ExtensionAgreed" || data == "ExtensionRejected")//申请书已提交和待审批中
                        {
                            if(data == "ExtensionRejected")
                            {
                                $.ajax({
                                    url: "/SubjectLeader/LoginPersonIsEqualApprovalWritePerson?id=" + id,
                                    type: "post",
                                    success: function (data) {
                                        if (data != null) {
                                            if (data == "Equal") {
                                                $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" src="/SubjectLeader/ExtensionRejected?id=' + id + '">项目延期</iframe>');
                                                $("#processwindow").data("kendoWindow").center().open();
                                            }
                                            else {
                                                alert("权限不对！");
                                            }
                                        }
                                    }
                                });
                            }
                            else
                            {
                                $("#processwindow").append(' <iframe id="process" width="100%" height="240%" scrolling="no" src="/SubjectLeader/ExtensionAgree?id=' + id + '">项目延期</iframe>');
                                $("#processwindow").data("kendoWindow").center().open();
                            }
                        }
                    }
                    else {
                        alert("发生异常！");
                    }
                }
            });
        }
    </script>

                      <div id="bigfundsgrid" class="k-content">
                          <div id="fundsGrid">

                          </div>
                          <script>
                              $(function () {
                                  searchrightdataoffundslist();
                              });

                              function searchrightdataoffundslist() {
                                  var searchitem2 = $("#projectName").val();
                                  var searchitem3 = $("#State").val();
                                  var searchitem4 = $("#Freeze").val();
                                  var searchitem5 = $("#startTime").val();
                                  var searchitem6 = $("#endTime").val();
                                  var dataSource = new kendo.data.DataSource({
                                      transport: {
                                          read: {
                                              type: "post",
                                              url: "/SubjectLeader/ProcessingListStatistics?projectName=" +
                                              encodeURI(searchitem2) + "&State=" + encodeURI(searchitem3) + "&Freeze=" +
                                              encodeURI(searchitem4) + "&startTime=" + encodeURI(searchitem5) + "&endTime=" +
                                              encodeURI(searchitem6) + "",
                                              dataType: "json",
                                              contentType: "application/json",
                                          },

                                          destroy: {
                                              type: "post",
                                              url: "/SubjectLeader/DeleteProcessingListByModelId",
                                              dataType: "json",
                                              complete: function (e) {
                                                  $("#fundsGrid").data("kendoGrid").dataSource.read();
                                              }
                                          },
                                          parameterMap: function (options, operation) {
                                              if (operation == "read") {
                                                  var parameter = {
                                                      page: options.page,
                                                      pageSize: options.pageSize
                                                  };
                                                  return kendo.stringify(parameter);
                                              }
                                              if (operation == "destroy") {
                                                  options.action = operation;
                                                  return { modelId: kendo.stringify(options.models[options.models.length - 1].ID) };
                                              }
                                          },
                                      },

                                      batch: true,
                                      pageSize: 10,
                                      schema: {
                                          model: {
                                              //删除时必须有
                                              id: "ID"
                                          },
                                          data: function (d) {
                                              for (var i = 0; i < d.data.length; i++) {
                                                  ////将json时间转换
                                                  var birthdayMilliseconds = eval('new ' + d.data[i].ProjectEstablishTime.replace('/', '', 'g').replace('/', '', 'g'));
                                                  var birthday = birthdayMilliseconds.toLocaleDateString() + " " + birthdayMilliseconds.toLocaleTimeString();
                                                  d.data[i].ProjectEstablishTime = birthday;
                                                  //}
                                                  d.data[i].FormValuesType = d.data[i].FormValues.split('#')[0];
                                                  d.data[i].FormValuesPartment = d.data[i].FormValues.split('#')[4];
                                                  d.data[i].IsLock = d.data[i].IsLocked;

                                                  if (d.data[i].IsLock == false) {
                                                      d.data[i].IsLock = "启用";
                                                  }
                                                  else if (d.data[i].IsLock == true) {
                                                      d.data[i].IsLock = "冻结";
                                                  }
                                                  else {
                                                      d.data[i].IsLock = "";
                                                  }

                                                  d.data[i].Applications = d.data[i].ApplicationStatus;
                                                  if (d.data[i].Applications == "ProjectEstablished") {
                                                      d.data[i].Applications = "项目已确立";
                                                  }
                                                  else if (d.data[i].Applications == "ContractSigning") {
                                                      d.data[i].Applications = "合同未上报";
                                                  }
                                                  else if (d.data[i].Applications == "ProjectProcessing") {
                                                      d.data[i].Applications = "项目过程中";
                                                  }
                                                  else if (d.data[i].Applications == "ConcludeUnWrite") {
                                                      d.data[i].Applications = "结题报告未填写";
                                                  }
                                                  else if (d.data[i].Applications == "ConcludeRejected") {
                                                      d.data[i].Applications = "结题报告被驳回";
                                                  }
                                                  else if (d.data[i].Applications == "ConcludeUnSubmit") {
                                                      d.data[i].Applications = "结题报告未上报";
                                                  }
                                                  else if (d.data[i].Applications == "ProjectConcluding") {
                                                      d.data[i].Applications = "结题报告审核中";
                                                  }
                                                  else if (d.data[i].Applications == "ProjectConcluded") {
                                                      d.data[i].Applications = "项目结束";
                                                  }
                                                  else {
                                                      d.data[i].Applications = "";
                                                  }

                                              }
                                              return d.data;

                                          },
                                          total: function (d) {
                                              return d.total;
                                          }
                                      },
                                      serverPaging: true,
                                  });

                                  $("#fundsGrid").kendoGrid({
                                      dataSource: dataSource,
                                      pageable: {
                                          refresh: true,
                                          pageSizes: true,
                                          buttonCount: 5,
                                          messages: {
                                              display: "显示{0}-{1}条，共{2}条",
                                              empty: "没有数据",
                                              page: "页",
                                              of: "/ {0}",
                                              itemsPerPage: "条/页",
                                              first: "第一页",
                                              previous: "前一页",
                                              next: "下一页",
                                              last: "最后一页",
                                              refresh: "刷新"
                                          }
                                      },
                                      columns: [
                                      {
                                          field: "ID",
                                          title: "序号",
                                          hidden: true,
                                      },
                                      {
                                          field: "BeiYong1",
                                          title: "项目编号",
                                          width: "16%"
                                      },
                                      {
                                          field: "WenHao",
                                          title: "项目名称",
                                          width: "15%"
                                      },
                                      {
                                          field: "UserName",
                                          title: "申请人",
                                          width: "10%"
                                      },
                                      {
                                          field: "IsLock",
                                          title: "是否冻结",
                                          width: "8%"
                                      },
                                      {

                                          field: "Applications",
                                          title: "状态",
                                          width: "8%",


                                      },
                                      {
                                          field: "FormValuesType",
                                          title: "项目类型",
                                          width: "12%"
                                      },
                                      {
                                          field: "FormValuesPartment",
                                          title: "部门",
                                          width: "10%"
                                      },
                                       {
                                           field: "ProjectEstablishTime",
                                           title: "项目确立时间",
                                           width: "13%"
                                       },
                                      {
                                          command:
                                          [{ name: "destroy", text: "删除",width: "8%" }]
                                      }
                                      ],
                                      editable: {
                                          //mode: "inline",
                                          mode: "popup"
                                      },
                                      selectable: true,
                                      change: onChange,
                                  });
                              };
                              function onChange(arg) {
                                  var selected = $.map(this.select(), function (item) {
                                      OpenProcessWindow(item.cells[0].outerText);
                                  });
                              }
                          </script>


                      </div>

