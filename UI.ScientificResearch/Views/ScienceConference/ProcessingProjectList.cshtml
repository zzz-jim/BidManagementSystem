    <script type="text/javascript">

        function OpenProcessWindow(id) {
          //  layer.load('加载带文字', 3);
           // layer.load(3);
        $("#processwindow").kendoWindow({
            position: {
                top: "15%", // or "100px"
                left: "13%"
            },
            width: "80%",
            height: "80%",
            draggable: true,
            //title: "申请书",
            visible: false,
            actions: [
                    "Pin",
                    "Close",
                   // "Minimize",
                 // "Maximize"
            ],
            resizable: false,
            close: function (e) {
                parent.location.reload();//刷新页面
            }
        });

        $.ajax({
            url: "/ScienceConference/ReturnStateValue?id=" + id,
            type: "post",
            success: function (data) {
                if (data != null) {
                    var k = data;
                    //判断返回的状态来控制弹出框第一个打开的页面
                    //申请书已填写未审核、科室主任已经审批申请书、科教科已经审批申请书、科教科已经审批申请书、超级管理员审批已经审批申请书

                    if (data == "MeetingEnd")//会议结束
                    {
                        $.ajax({
                            url: "/ScienceConference/LoginPersonIsEqualApprovalWritePerson?id=" + id,
                            type: "post",
                            success: function (data) {
                                if (data != null) {
                                    if (data == "Equal") {
                                        $("#processwindow").append(' <iframe id="process" width="100%" height="100%" style="border:0px" src="/ScienceConference/SignContract?id=' + id + '">合同记录</iframe>');
                                        $("#processwindow").data("kendoWindow").center().open();
                                    }
                                    else {
                                        alert("权限不对!");
                                    }
                                }
                            }
                        });
                    }
                    else if (data == "MeetingProcess")//经费记录列表
                    {
                        $("#processwindow").append(' <iframe id="process" width="100%" height="100%" style="border:0px" src="/ScienceConference/ReimburseWorkList?id=' + id + '">项目申请书</iframe>');
                        $("#processwindow").data("kendoWindow").center().open();
                    }
                }
                else {
                    alert("发生异常！");
                }
            }
        });
    }
    </script>


                      <div id="bigfundsgrid" class="k-content">
                          <div id="fundsGrid">

                          </div>
                          <script>
                              $(function () {
                                  searchrightdataoffundslist();
                              });

                              function searchrightdataoffundslist() {
                                  var searchitem2 = $("#projectName").val();
                                  var searchitem3 = $("#State").val();
                                  var searchitem4 = $("#Freeze").val();
                                  var searchitem5 = $("#startTime").val();
                                  var searchitem6 = $("#endTime").val();
                                  var dataSource = new kendo.data.DataSource({
                                      transport: {
                                          read: {
                                              type: "post",
                                              url: "/ScienceConference/ProcessingListStatistics?projectName=" +
                                              encodeURI(searchitem2) + "&State=" + encodeURI(searchitem3) + "&Freeze=" +
                                              encodeURI(searchitem4) + "&startTime=" + encodeURI(searchitem5) + "&endTime=" +
                                              encodeURI(searchitem6) + "",
                                              dataType: "json",
                                              contentType: "application/json",
                                          },

                                          destroy: {
                                              type: "post",
                                              url: "/ScienceConference/DeleteProcessingListByModelId",
                                              dataType: "json",
                                              complete: function (e) {
                                                  $("#fundsGrid").data("kendoGrid").dataSource.read();
                                              }
                                          },
                                          parameterMap: function (options, operation) {
                                              if (operation == "read") {
                                                  var parameter = {
                                                      page: options.page,
                                                      pageSize: options.pageSize
                                                  };
                                                  return kendo.stringify(parameter);
                                              }
                                              if (operation == "destroy") {
                                                  options.action = operation;
                                                  return { modelId: kendo.stringify(options.models[options.models.length - 1].ID) };
                                              }
                                          },
                                      },

                                      batch: true,
                                      pageSize: 10,
                                      schema: {
                                          model: {
                                              //删除时必须有
                                              id: "ID"
                                          },
                                          data: function (d) {
                                              for (var i = 0; i < d.data.length; i++) {
                                                  ////将json时间转换
                                                  //var birthdayMilliseconds = eval('new ' + d.data[i].ProjectEstablishTime.replace('/', '', 'g').replace('/', '', 'g'));
                                                  //var birthday = birthdayMilliseconds.toLocaleDateString() + " " + birthdayMilliseconds.toLocaleTimeString();
                                                  //d.data[i].ProjectEstablishTime = birthday;
                                                  //}
                                                  d.data[i].FormValuesTime = d.data[i].FormValues.split('#')[6];
                                                  d.data[i].FormValuesIdentity = d.data[i].FormValues.split('#')[9];
                                                  d.data[i].FormValuesPartment = d.data[i].FormValues.split('#')[1];
                                                  d.data[i].IsLock = d.data[i].IsLocked;

                                                  if (d.data[i].IsLock == false) {
                                                      d.data[i].IsLock = "启用";
                                                  }
                                                  else if (d.data[i].IsLock == true) {
                                                      d.data[i].IsLock = "冻结";
                                                  }
                                                  else {
                                                      d.data[i].IsLock = "";
                                                  }

                                                  d.data[i].Applications = d.data[i].ApplicationStatus;
                                                  if (d.data[i].Applications == "MeetingProcess") {
                                                      d.data[i].Applications = "会议过程中";
                                                  }
                                                  else if (d.data[i].Applications == "MeetingEnd") {
                                                      d.data[i].Applications = "会议结束";
                                                  }
                                                  else {
                                                      d.data[i].Applications = "";
                                                  }

                                              }
                                              return d.data;

                                          },
                                          total: function (d) {
                                              return d.total;
                                          }
                                      },
                                      serverPaging: true,
                                  });

                                  $("#fundsGrid").kendoGrid({
                                      dataSource: dataSource,
                                      pageable: {
                                          refresh: true,
                                          pageSizes: true,
                                          buttonCount: 5,
                                          messages: {
                                              display: "显示{0}-{1}条，共{2}条",
                                              empty: "没有数据",
                                              page: "页",
                                              of: "/ {0}",
                                              itemsPerPage: "条/页",
                                              first: "第一页",
                                              previous: "前一页",
                                              next: "下一页",
                                              last: "最后一页",
                                              refresh: "刷新"
                                          }
                                      },
                                      columns: [
                                      {
                                          field: "ID",
                                          title: "序号",
                                          hidden: true,
                                      },
                                      {
                                          field: "WenHao",
                                          title: "会议名称",
                                          width: "20%"
                                      },
                                      {
                                          field: "UserName",
                                          title: "申请人",
                                          width: "10%"
                                      },
                                      {
                                          field: "IsLock",
                                          title: "是否冻结",
                                          width: "10%"
                                      },
                                      {

                                          field: "Applications",
                                          title: "状态",
                                          width: "11%",


                                      },
                                      {
                                          field: "FormValuesIdentity",
                                          title: "参会身份",
                                          width: "15%"
                                      },
                                      {
                                          field: "FormValuesPartment",
                                          title: "部门",
                                          width: "10%"
                                      },
                                       {
                                           field: "FormValuesTime",
                                           title: "创建时间",
                                           width: "14%"
                                       },
                                      {
                                          command:
                                          [{ name: "destroy", text: "删除",width: "10%" }]
                                      }
                                      ],
                                      editable: {
                                          //mode: "inline",
                                          mode: "popup"
                                      },
                                      selectable: true,
                                      change: onChange,
                                  });
                              };
                              function onChange(arg) {
                                  var selected = $.map(this.select(), function (item) {
                                      OpenProcessWindow(item.cells[0].outerText);
                                  });
                              }
                          </script>


                      </div>
